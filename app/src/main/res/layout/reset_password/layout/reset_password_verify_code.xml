<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/majorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:titleTextAppearance="@style/AppBarTitleStyle">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="\u003C" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="322dp"
                android:layout_height="540dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.230">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="0dp"
                    android:text="Enter Verification Code" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="90dp"
                    android:text="Enter code that we have sent to your email"
                    android:textColor="#717784"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/digit1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_square"
                    android:layout_marginTop="160dp"
                    android:maxLength="1"
                    android:paddingLeft="20dp"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/digit2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_square"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="55dp"
                    android:maxLength="1"
                    android:paddingLeft="20dp"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/digit3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_square"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="110dp"
                    android:maxLength="1"
                    android:paddingLeft="20dp"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/digit4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_square"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="165dp"
                    android:maxLength="1"
                    android:paddingLeft="20dp"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/digit5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_square"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="218dp"
                    android:maxLength="1"
                    android:paddingLeft="20dp"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/digit6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_rounded_square"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="272dp"
                    android:maxLength="1"
                    android:paddingLeft="20dp"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#CC0000"
                    android:text="" />

                <Button
                    android:id="@+id/verifyCodeButton"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="250dp"
                    android:backgroundTint="@color/dark_green"
                    android:text="Verify" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="340dp"
                    android:gravity="center"
                    android:text="Didin't receive the code? "
                    android:textColor="#717784"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="215dp"
                    android:layout_marginTop="340dp"
                    android:gravity="center"
                    android:text=" Resend"
                    android:textColor="#147B72"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


