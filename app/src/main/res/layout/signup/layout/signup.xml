<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/majorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:titleTextAppearance="@style/AppBarTitleStyle">

        <TextView
            android:id="@+id/backToOnboarding4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="\u003C" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:text="Sign up" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="540dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp"
                android:layout_marginTop="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="   Enter your name"
                    android:drawableLeft="@drawable/name_icon"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_rounded_bg"
                    android:inputType="text" />
                <EditText
                    android:id="@+id/contactNo"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="   Enter your contact number"
                    android:drawableLeft="@drawable/contact_icon"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_rounded_bg"
                    android:layout_marginTop="65dp"
                    android:inputType="text" />
                <Button
                    android:id="@+id/datePickerButton"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:textColor="#AAAAAA"
                    app:strokeColor="#CCCCCC"
                    app:strokeWidth="1dp"
                    android:text="Enter your Date of Birth"
                    android:drawableLeft="@drawable/calendar_icon"
                    android:paddingLeft="20dp"
                    android:paddingRight="110dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginTop="125dp"
                    android:onClick="showDatePicker" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="   Enter your email"
                    android:drawableLeft="@drawable/email_icon"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_rounded_bg"
                    android:layout_marginTop="195dp"
                    android:inputType="text" />
                <EditText
                    android:id="@+id/password"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="   Enter your password"
                    android:drawableLeft="@drawable/password_icon"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_rounded_bg"
                    android:layout_marginTop="260dp"
                    android:inputType="textPassword" />
                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="   Enter confirm password"
                    android:drawableLeft="@drawable/password_icon"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_rounded_bg"
                    android:layout_marginTop="325dp"
                    android:inputType="textPassword" />
                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="380dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#CC0000"
                    android:text="" />

                <Button
                    android:id="@+id/continueSignup"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="450dp"
                    app:strokeColor="@color/dark_green"
                    app:strokeWidth="2dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/dark_green"
                    android:text="Continue" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

