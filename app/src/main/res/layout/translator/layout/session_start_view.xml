<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/majorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F3F1"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="180dp"
                android:textColor="#147B72"
                android:gravity="center"
                android:text="Please await the\ncommencement of the\nsession." />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:textColor="#ADB3BC"
                android:text="Session ID" />
            <TextView
                android:id="@+id/sessionIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#555555"
                android:text="ABC-CDE-345" />
            <Button
                android:id="@+id/leaveSession"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:backgroundTint="#FF0000"
                android:textSize="16dp"
                android:text="Leave Session" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>