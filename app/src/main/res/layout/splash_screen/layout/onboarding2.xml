<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/majorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:background="#FFFFFF"
    tools:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/skipToOnboarding4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textColor="#A1A8B0"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="130dp"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="274dp"
                android:layout_height="255dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="120dp"
                app:srcCompat="@drawable/screen_2" />

            <androidx.cardview.widget.CardView
                android:layout_width="321dp"
                android:layout_height="211dp"
                app:cardBackgroundColor="#E8FCFA"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="284dp"
                    android:layout_height="80dp"
                    android:text="Interactive sign language learning platform"
                    android:textSize="22sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="284dp"
                    android:layout_height="80dp"
                    android:text=" - "
                    android:textSize="22sp"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textColor="#E888FC" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="284dp"
                    android:layout_height="80dp"
                    android:text=" - "
                    android:textSize="22sp"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="43dp"
                    android:textStyle="bold"
                    android:textColor="#147B72" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="284dp"
                    android:layout_height="80dp"
                    android:text=" - "
                    android:textSize="22sp"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="56dp"
                    android:textStyle="bold"
                    android:textColor="#E888FC" />
                <Button
                    android:id="@+id/linkToOnboarding3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="220dp"
                    android:backgroundTint="@color/dark_green"
                    android:text="\u2192" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
